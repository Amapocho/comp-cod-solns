#include <bits/stdc++.h>
using namespace std;
 
int main() {
	int t; 
	cin>>t;
	while(t--)
	{
	    string s;
	    cin>>s;
	    int l=s.length();
	    int ct = 0;
	    if (l%2==1)
	    {
	        cout <<"NO"<<endl;
	        continue;
	    }
	    if (s[0]==')')
	    {
	        cout <<"NO"<<endl;
	        continue;
	    }
	    if (s[l-1]=='(')
	    {
	        cout <<"NO"<<endl;
	        continue;
	    }
	    cout<<"YES"<<endl;
	}
}
